<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="D:\Logs\swti\Internal\internal-nlog.txt">
	--><!--${basedir}/logs/${logger}-${date:format=dd\-MM\-yyyy}.log-->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>
	<!-- define various log targets -->
	<targets async="true">
		<target name="coloredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
	   layout="${longdate} swti ${machinename} ${logger} ${threadid} ${uppercase:${level}} [[${replace:inner=${message}:searchFor=\\r\\n|\\s:replaceWith= :regex=true}]]" >
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>

		<!-- write logs to file -->
		<!--<target xsi:type="File" name="allfile" fileName="${basedir}\logs\log-${shortdate}.log"
					 layout="${longdate}|${logger}|${uppercase:${level}}|${message} ${exception}" />-->

		<target xsi:type="File" name="ownFile" fileName="${basedir}\logs\own-${shortdate}.log"
				  layout="${longdate}|${logger}|${uppercase:${level}}|${message} ${exception}" />

	
		<target xsi:type="Null" name="blackhole" />
	</targets>

	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="allfile" />

		<!--Skip Microsoft logs and so log only own logs-->
		<logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
		<logger name="*" minlevel="Trace" writeTo="ownFile" />
	</rules>
</nlog>